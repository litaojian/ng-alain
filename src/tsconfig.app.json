{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "module": "es2015",
        "types": [],
        "paths": {
            "@bizapp": ["bizapp"],
            "@bizapp/*": ["bizapp/*"],
            "@shared": ["app/shared"],
            "@shared/*": ["app/shared/*"],
            "@core": ["app/core/"],
            "@core/*": ["app/core/*"],
            "@testing": ["testing/"],
            "@testing/*": ["testing/*"],
            "@env": ["environments/"],
            "@env/*": ["environments/*"],
            "@angular/*": ["../node_modules/@angular/*"]
        }
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}